<aside class="flex flex-col border border-slate-200 rounded-lg p-4 py-6">
  <h1 class="text-4xl font-extrabold text-slate-200 mb-3">
    Skills
  </h1>
  <% @categories.each do |category, id| %>
    <% skills = Skill.where(category: category).all %>
    <% if skills.any? %>
      <div class="my-2">
        <div class="font-bold">
          <%= category %>
        </div>
        <% Skill.where(category: category).each do |s| %>
          <%= skills.map{|key| key.name }.join(", ") %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</aside>
